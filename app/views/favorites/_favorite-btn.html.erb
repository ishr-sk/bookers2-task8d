  <% if book.favorited_by?(current_user) %>
    <p>
    <!--ハートの色を赤に変える class: "text-danger"-->
      <%= link_to book_favorites_path(book), method: :delete, class: "text-danger", remote: true do %>
        ♥<%= book.favorites.count %>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to book_favorites_path(book), method: :post, class: "text-pri", remote: true do %>
        ♥<%= book.favorites.count %>
      <% end %>
    </p>
  <% end %>

